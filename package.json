{
  "name": "llm-proxy",
  "displayName": "LLM Proxy",
  "description": "A VSCode extension that proxies LLM requests.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:llm-proxy.startProxy",
    "onCommand:llm-proxy.stopProxy",
    "onCommand:llm-proxy.addModel",
    "onCommand:llm-proxy.removeModel",
    "onCommand:llm-proxy.openSettings",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llm-proxy.startProxy",
        "title": "Start Proxy"
      },
      {
        "command": "llm-proxy.stopProxy",
        "title": "Stop Proxy"
      },
      {
        "command": "llm-proxy.addModel",
        "title": "Add Model"
      },
      {
        "command": "llm-proxy.removeModel",
        "title": "Remove Model"
      },
      {
        "command": "llm-proxy.openSettings",
        "title": "Open Settings"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "postinstall": "npm install"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.20.2",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "express": "^4.19.2",
    "http-proxy-middleware": "^3.0.0"
  }
}